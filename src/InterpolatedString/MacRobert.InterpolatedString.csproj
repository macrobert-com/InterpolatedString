<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
    <!-- NuGet properties -->
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>MacRobert.InterpolatedString</PackageId>
    <PackageDescription>Make brace-interpolated-strings re-usable in .NET</PackageDescription>    
    <IncludeSymbols>True</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <ProjectUrl>https://github.com/macrobert-com/InterpolatedString</ProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIcon>icon.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Include="assets/images/icon.png" Pack="true" PackagePath="\"/>
  </ItemGroup>

</Project>
